<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colourAccentDark"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="25dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="Profile"
        android:textStyle="bold"
        android:textColor="@color/colourPrimary"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/detailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="John Smith"
        android:textStyle="bold"
        android:textColor="@color/colourPrimaryDark"
        android:textSize="60sp"
        android:layout_below="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/moreDetailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="6 years old"
        android:textStyle="bold"
        android:textColor="@color/colourPrimaryDark"
        android:textSize="40sp"
        android:layout_below="@+id/detailsTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/childDashboardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Dashboard"
        android:textSize="24sp"
        android:textColor="@color/colourPrimaryDark"
        android:layout_below="@id/moreDetailsTV"/>

</RelativeLayout>